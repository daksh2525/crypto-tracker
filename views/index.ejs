<!DOCTYPE html>
<html>
<head>
  <title>Crypto Tracker</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>ğŸª™ Top 10 Cryptocurrencies</h1>
  <table>
    <tr>
      <th>Coin</th>
      <th>Price (USD)</th>
      <th>Market Cap</th>
    </tr>
    <% coins.forEach(coin => { %>
      <tr>
        <td><%= coin.name %> (<%= coin.symbol.toUpperCase() %>)</td>
        <td>$<%= coin.current_price.toLocaleString() %></td>
        <td>$<%= coin.market_cap.toLocaleString() %></td>
      </tr>
    <% }) %>
  </table>

  <h2>ğŸ“Š Your Portfolio</h2>
  <ul>
    <% portfolio.forEach(p => { %>
      <li>
        <%= p.amount %> <%= p.name %> (<%= p.symbol.toUpperCase() %>)
        <form action="/delete/<%= p._id %>" method="POST" style="display:inline;">
          <button type="submit">âŒ Remove</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <h3>Add to Portfolio</h3>
  <form action="/add" method="POST">
    <input type="text" name="name" placeholder="Bitcoin" required>
    <input type="text" name="symbol" placeholder="btc" required>
    <input type="number" name="amount" step="0.0001" placeholder="1.5" required>
    <button type="submit">â• Add</button>
  </form>
</body>
</html>
